<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.roberthernandez.code2040_fellows_2017_app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/responseBox"
        android:text="@string/post_placeholder"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnOne" />

    <Button
        android:text="@string/submit_reverse_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTwo"
        android:layout_below="@+id/btnOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:text="@string/submit_haystack_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnThree"
        android:layout_below="@+id/btnTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>

